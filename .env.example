# FJCinSA's Crypto Trading Bot Configuration
# Copy this file to .env and add your actual API keys
# NEVER commit .env to GitHub!

# Exchange API Keys (Start with testnet!)
BINANCE_API_KEY=your_binance_testnet_api_key_here
BINANCE_SECRET=your_binance_testnet_secret_here
BINANCE_TESTNET=True

COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here
COINBASE_SANDBOX=True

# Risk Management (Conservative settings for learning)
MAX_PORTFOLIO_RISK=0.01
MAX_DAILY_LOSS=0.02
POSITION_SIZE_LIMIT=0.05

# Trading Configuration
INITIAL_CAPITAL=1000.0
BASE_CURRENCY=USDT

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# Database
DATABASE_URL=sqlite:///database/trading.db
REDIS_URL=redis://localhost:6379/0
